{
  "type": "minecraft:disk",
  "config": {
    "state_provider": {
      "fallback": {
        "type": "minecraft:simple_state_provider",
        "state": {
          "Name": "minecraft:tuff"
        }
      },
      "rules": [
        {
          "if_true": {
            "type": "minecraft:all_of",
            "predicates": [
              {
                "type": "minecraft:matching_blocks",
                "blocks": "minecraft:snow"
              },
              {
                "type": "minecraft:any_of",
                "predicates": [
                  {
                    "type": "minecraft:matching_fluids",
                    "offset": [
                      1,
                      -1,
                      0
                    ],
                    "fluids": "minecraft:lava"
                  },
                  {
                    "type": "minecraft:matching_fluids",
                    "offset": [
                      -1,
                      -1,
                      0
                    ],
                    "fluids": "minecraft:lava"
                  },
                  {
                    "type": "minecraft:matching_fluids",
                    "offset": [
                      0,
                      -1,
                      1
                    ],
                    "fluids": "minecraft:lava"
                  },
                  {
                    "type": "minecraft:matching_fluids",
                    "offset": [
                      0,
                      -1,
                      -1
                    ],
                    "fluids": "minecraft:lava"
                  }
                ]
              }
            ]
          },
          "then": {
            "type": "minecraft:simple_state_provider",
            "state": {
              "Name": "minecraft:void_air"
            }
          }
        },
        {
          "if_true": {
            "type": "minecraft:matching_blocks",
            "blocks": "minecraft:snow"
          },
          "then": {
            "type": "minecraft:simple_state_provider",
            "state": {
              "Name": "minecraft:air"
            }
          }
        }
      ]
    },
    "target": {
      "type": "minecraft:matching_blocks",
      "blocks": [
        "minecraft:snow_block",
        "minecraft:snow",
        "minecraft:packed_ice",
        "minecraft:blue_ice"
      ]
    },
    "radius": {
      "type": "minecraft:uniform",
        "min_inclusive": 8,
        "max_inclusive": 8
    },
    "half_height": 4
  }
}
