{
  "type": "minecraft:disk",
  "config": {
    "state_provider": {
      "fallback": {
        "type": "minecraft:simple_state_provider",
        "state": {
          "Name": "minecraft:dirt"
        }
      },
      "rules": [
        {
          "if_true": {
            "type": "minecraft:all_of",
            "predicates": [
              {
                "type": "minecraft:any_of",
                "predicates": [
                  {
                    "type": "minecraft:matching_fluids",
                    "offset": [
                      0,
                      1,
                      0
                    ],
                    "fluids": "minecraft:water"
                  },
                  {
                    "type": "minecraft:matching_blocks",
                    "offset": [
                      0,
                      1,
                      0
                    ],
                    "blocks": [
                      "minecraft:sand"
                    ]
                  }
                ]
              },
              {
                "type": "minecraft:matching_block_tag",
                "offset": [
                  0,
                  -1,
                  0
                ],
                "tag": "minecraft:replaceable"
              }
            ]
          },
          "then": {
            "type": "minecraft:simple_state_provider",
            "state": {
              "Name": "minecraft:sandstone"
            }
          }
        },
        {
          "if_true": {
            "type": "minecraft:any_of",
            "predicates": [
              {
                "type": "minecraft:matching_fluids",
                "offset": [
                  0,
                  1,
                  0
                ],
                "fluids": "minecraft:water"
              },
              {
                "type": "minecraft:matching_blocks",
                "offset": [
                  0,
                  1,
                  0
                ],
                "blocks": [
                  "minecraft:sand"
                ]
              }
            ]
          },
          "then": {
            "type": "minecraft:simple_state_provider",
            "state": {
              "Name": "minecraft:sand"
            }
          }
        }
      ]
    },
    "target": {
      "type": "minecraft:matching_blocks",
      "blocks": [
        "minecraft:dirt"
      ]
    },
    "radius": {
      "type": "minecraft:uniform",
        "min_inclusive": 7,
        "max_inclusive": 8
    },
    "half_height": 4
  }
}
